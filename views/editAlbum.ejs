<%- include('header') %>
<main>
    <h2>Modifier l'Album</h2>
    <form action="/albums/edit/<%= album._id %>" method="POST">
        <label for="title">Titre:</label>
        <input type="text" id="title" name="title" value="<%= album.title %>" required>
        
        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= album.description %></textarea>
        
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= album.date.toISOString().split('T')[0] %>" required>
        
        <button type="submit">Modifier</button>
    </form>
</main>
</body>
</html>
